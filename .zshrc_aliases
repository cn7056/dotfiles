# -------------------------------
# Directory jumping
export _Z_DATA="$HOME/.z"
function _z() {
    local dest
    dest=$(z "$1" 2>/dev/null)
    if [[ -n $dest ]]; then
        cd "$dest" || return
    fi
}
alias z='_z'
touch "$_Z_DATA"

# -------------------------------
# Aliases for modern Unix tools
alias ls='lsd'                   # replace ls with lsd
alias ll='lsd -lh'               # long list
alias la='lsd -A'                # show hidden files
alias l='lsd -CF'                # compact list

alias du='dust'                   # replace du with dust
alias df='duf'                    # replace df with duf
alias f='fd'                      # shortcut for fd
alias rg='rg --color=always'      # ripgrep with color
alias grep='rg'                   # optional: use rg as grep

alias gst='git status'
alias gd='git diff'
alias ..='cd ..'

