# ~/.zshrc
# -------------------------------
# Load core settings
if [ -f ~/.zshrc_core ]; then
    source ~/.zshrc_core
fi

# Load aliases and tool replacements
if [ -f ~/.zshrc_aliases ]; then
    source ~/.zshrc_aliases
fi

# Load prompt
if [ -f ~/.zshrc_prompt ]; then
    source ~/.zshrc_prompt
fi

# Load productivity enhancements
if [ -f ~/.zshrc_prod ]; then
    source ~/.zshrc_prod
fi

